<h1> Edit Your Lesson </h1>

<form action="/lessons/<%=@lesson.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  
  <label for="title"> Title: </label>
  <input type="text" name="title" value="<%=@lesson.title%>"><br>

  <label for="objectives"> Objectives: </label>
  <input type="text" name="objectives" value="<%=@lesson.objectives%>"><br> 
  
  <label for="content"> Content: </label>
  <input type="text" name="content" value="<%=@lesson.content%>"><br>

  <label for="assessment"> Assessment: </label>
  <input type="text" name="assessment" value="<%=@lesson.assessment%>"><br>

  <input type="submit">

</form>